@model NationalCrime.Web.ViewModel.RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}


@using(Html.BeginForm("Register","Account",FormMethod.Post))
{
      <div class="allerrors">
          @Html.ValidationSummary(true)
          @Html.ValidationMessageFor(m=>m.UserName)
           @Html.ValidationMessageFor(m=>m.Email)
         @Html.ValidationMessageFor(m=>m.Password)
            @Html.ValidationMessageFor(m=>m.ConfirmPassword)
    </div>
    if (ViewData["success"] != null)
    { 
   <div align="center" style="color:green"> @ViewData["success"]</div>
    }
    
    <div id="container">
 <label for="username">Username:</label> @Html.TextBoxFor(m => m.UserName)
 <label for="email">Email:</label>@Html.TextBoxFor(m=>m.Email)
   <label for="password">Password:</label>  @Html.PasswordFor(m=>m.Password)
   <label for="confirmpassword">Confirm Password:</label>  @Html.PasswordFor(m=>m.ConfirmPassword)

<input type="submit" value="Submit" name="Submit" />
        </div>
}
